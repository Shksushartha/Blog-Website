@{
}
@model LoginVM

<h1>
    Login
</h1>
<form asp-controller="Auth" asp-action="Login" method="post">
    <label asp-for="Username" class="form-label">Username</label>
    <input asp-for="Username" type="text" class="form-control"/>

    <label asp-for="Password" class="form-label"></label>
    <input asp-for="Password" type="password" class="form-control"/>

    <button class="btn btn-primary mt-3 mb-3">Login</button>
    <div>
        <p>Don't have an account? <a asp-controller="Auth" asp-action="Register" class="btn btn-primary">Sign Up</a></p>
    </div>
</form>





