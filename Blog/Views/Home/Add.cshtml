@model PostVM;
<h1 class="mb-3">
    Add post
</h1>
<form method="post" asp-controller="Panel" asp-action="Add" enctype="multipart/form-data">
    <label asp-for="Title" class="form-label">Title</label>
    <input type="text" asp-for="Title" class="form-control" />

    <label asp-for="Description" class="form-label">Description</label>
    <input type="text" asp-for="Description" class="form-control" />

    <label asp-for="Tags" class="form-label">Tags</label>
    <input type="text" asp-for="Tags" class="form-control" />

    <label asp-for="Category" class="form-label">Category</label>
    <select asp-for="Category" class="form-control">
        <option value="1">Travel</option>
        <option value="2">Photography</option>
        <option value="3">Programming</option>
    </select>
    <label asp-for="Body" class="form-label">Content</label>
    <textarea asp-for="Body" id="editor" class="form-control"></textarea>
    <label asp-for="Image" class="form-label">Image</label>
    <input asp-for="Image" class="form-control mb-3" />
    <button class="btn btn-primary" type="submit">Submit</button>
</form>




