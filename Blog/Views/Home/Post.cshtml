@{
}

@model Post

<h1>@Model.Title</h1>

@if (!string.IsNullOrEmpty(Model.Image))
    {
        var image_path = $"/Image/{Model.Image}";
        <img src="@image_path" width="500px"/>
}

<p>@Model.Body</p>
<br />
<h2>
    Comments
</h2>
    <table class="table">

    @foreach(var c in Model.mainComments)
{
        <tr class="mb-3">
            <td>
                @c.comment

                @if (User.IsInRole("Admin"))
                {
                    {
                        Html.RenderPartial("_removeComment", new CommentVM { postId = Model.Id, MainCommentId = c.Id });
                    }
                }
                <ul>
                    @foreach (var sc in c.subComments)
                    {
                        <li>
                            @sc.comment
                            @if (User.IsInRole("Admin"))
                            {
                                {
                                    Html.RenderPartial("_removeSubComment", new CommentVM { postId = Model.Id, SubCommentId = sc.Id });
                                }
                            }
                        </li>
                    }
                </ul>
                <div>
                    Add a reply?
                    @{
                        Html.RenderPartial("_MainComment", new CommentVM { postId = Model.Id, MainCommentId = c.Id });
                    }

                </div>
            </td>
        </tr>
                        }
    </table>


<div>
    Add a comment?
    @{
            Html.RenderPartial("_MainComment", new CommentVM { postId = Model.Id, MainCommentId = 0 });
        }
    
</div>


