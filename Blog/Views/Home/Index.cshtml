@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<Post>

<div class="text-center">
    <h1>Welcome</h1>
    <img src="~/content/static/DSC04598.JPG" width="700px"/>
    @if (User.Identity.IsAuthenticated)
{

    <div class="mt-3">
        <table class="table">
            <tr>
                <th>
                    <h2>
                    Blogs
                        </h2>
                </th>
            </tr>
            @foreach (var items in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Home" asp-action="Post" asp-route-id="@items.Id">@items.Title</a>

                    </td>
                </tr>
            }
        </table>
        
    </div>
}
    
   
</div>

